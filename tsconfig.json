{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ES2022",
    "paths": {
      "@web/*": ["apps/web/src/*"],
      "@core/*": ["packages/core/src/*"],
      "@payload-config": ["packages/core/src/payload/config.ts"]
    }
  },
  "include": ["apps", "packages", "turbo", "postcss.config.mjs", "types"],
  "exclude": ["node_modules", ".next"]
}
