{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@web": ["../../apps/web/src"],
      "@web/*": ["../../apps/web/src/*"],
      "@dflow/core": ["../../packages/core/src"],
      "@dflow/core/*": ["../../packages/core/src/*"],
      "content-collections": ["../web/.content-collections/generated"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts",
    ".content-collections",
    "content-collections.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../packages/core"
    }
  ]
}
