{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "SKIP_VALIDATION",
    "NEXT_PUBLIC_*",
    "DATABASE_URI",
    "PAYLOAD_SECRET",
    "REDIS_URI",
    "NODE_ENV",
    "RESEND_API_KEY",
    "RESEND_SENDER_EMAIL",
    "RESEND_SENDER_NAME",
    "TAILSCALE_AUTH_KEY",
    "TAILSCALE_OAUTH_CLIENT_SECRET",
    "TAILSCALE_TAILNET",
    "BESZEL_MONITORING_URL",
    "BESZEL_SUPERUSER_EMAIL",
    "BESZEL_SUPERUSER_PASSWORD",
    "BESZEL_HUB_SSH_KEY",
    "S3_ENDPOINT",
    "S3_REGION",
    "S3_ACCESS_KEY_ID",
    "S3_SECRET_ACCESS_KEY"
  ],
  "envMode": "strict",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "**/.env.*local"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
