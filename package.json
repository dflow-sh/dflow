{
  "name": "dflow-monorepo",
  "version": "0.1.0",
  "description": "dFlow is an open source alternative to Railway, Heroku & Vercel",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "10.2.0"
  },
  "packageManager": "pnpm@10.2.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "web": "pnpm --filter @dflow/web dev",
    "web:build": "pnpm --filter @dflow/web build",
    "web:start": "pnpm --filter @dflow/web start",
    "generate:types": "pnpm --filter @dflow/web generate:types",
    "generate:importmap": "pnpm --filter @dflow/web generate:importmap",
    "migrate:beszel": "tsx -r dotenv/config ./scripts/populateBeszelSystemIds.ts"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "dotenv": "^17.2.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.3.3",
    "tsx": "^4.20.5",
    "typescript": "5.7.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ],
    "overrides": {
      "@types/react": "19.1.12",
      "@types/react-dom": "19.1.9",
      "xterm": "5.3.0",
      "next-safe-action": "7.10.7"
    }
  }
}
