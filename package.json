{
  "name": "dflow-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "turbo": "^2.4.2",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@10.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ],
    "overrides": {
      "@types/react": "19.1.12",
      "@types/react-dom": "19.1.9"
    }
  }
}
