{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "rootDir": ".",
    "outDir": "dist",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "content-collections": ["packages/core/.content-collections/generated"]
    }
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    ".content-collections",
    "content-collections.ts"
  ],
  "exclude": ["node_modules"]
}
