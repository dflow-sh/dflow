{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "content-collections": ["packages/core/.content-collections/generated"]
    }
  },
  "include": ["src/**/*", ".content-collections", "content-collections.ts"],
  "exclude": ["node_modules", "dist"]
}
